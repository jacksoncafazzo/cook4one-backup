<li>
  <div class="row recipe-tile">
    {{#link-to 'recipe' recipe.id}}<h1>{{recipe.name}}</h1><img class="recipe-image" src={{recipe.image}} alt="Picture of {{recipe.name}}"/>
    {{/link-to}}
    <br><br>
    <h4 class="cook"><strong>Cook Time:  </strong> {{recipe.cook_time}}</h4><br>
    <h4 class="cook"><strong>Serves:</strong>  {{recipe.servings}}</h4>
  </div>
  <div class="row ingredients-index">
    <ul>
      {{#each recipe.ingredients as |ingredient|}}
      {{ingredient-tile ingredient=ingredient update="update" destroyIngredient="destroyIngredient"}}
      {{/each}}
    </ul>
  </div>
  <div class="col-md-6">
    {{recipe-cook4one recipe=recipe cook4one2="cook4one3"}}
  </div>

  <!-- {{new-ingredient saveIngredient3="saveIngredient2"}} -->
  {{#if areDirectionsShowing }}
    <hr>
    <h4>Directions</h4>
    <div class="recipe-directions">
      <p {{action 'directionsHide'}}>{{recipe.directions}}</p>
    </div>
  {{else}}
    <div class="show-directions">
      <button {{action 'directionsShow'}}>Show Recipe Directions</button>
    </div>
  {{/if}}
  {{update-recipe recipe=recipe update="update"}}
  <button {{action 'delete' recipe}}>Delete Recipe</button>
</li>
