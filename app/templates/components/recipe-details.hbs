<div class="row">
  <div class="recipe-display">
    <h1>{{recipe.name}}</h1><img class="recipe-image" src={{recipe.image}} alt="Picture of {{recipe.name}}"/>
    <p class="cook-time"><strong>Cook Time:</strong> {{recipe.cook_time}}</p>
    <p><strong>Serves:</strong> {{recipe.servings}}</p>
  </div>
</div>
<div class="row">

  <div class="ingredients">
    <ul>
      {{#each recipe.ingredients as |ingredient|}}
      {{ingredient-tile ingredient=ingredient update="update" destroyIngredient="destroyIngredient"}}
      {{/each}}
    </ul>
  </div>
</div>
  <div class="recipe-directions">
    <h4>Directions:</h4>
    <p>{{recipe.directions}}</p>
  </div>

  {{recipe-cook4one recipe=recipe}}

  {{update-recipe recipe=recipe update="update"}}
  <button {{action 'delete' recipe}}>Delete Recipe</button>
</div>
{{#link-to 'index'}}Back Home{{/link-to}}
